{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    // Decorator & metadata support (if needed by consumers like NestJS)
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Safer builds
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // Keep incremental for faster library builds
    "incremental": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}